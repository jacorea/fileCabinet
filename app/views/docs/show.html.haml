.wrapper_with_padding 
    #doc_show 
        %h1= @doc.title 
        %p= simple_format(@doc.content) 
        .buttons
            = link_to "Edit" , edit_doc_path(@doc), class: "button"
            = link_to "Trash" , doc_path(@doc), method: :delete, data: { confirm: "Are you sure?" }, class: "button"
